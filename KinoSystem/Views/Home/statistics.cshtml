@{
    Layout = "~/Views/Shared/_Layout.cshtml";
	ViewBag.Title = "Main";
}
@using KinoSystem.Models;
@model IEnumerable<Purhaces>

<div class="m-4 p-4">
    <table class="table text-white ">
        <thead>
            <tr>
                <th>Фильм</th>
                <th>Кто купил</th>
                <th>Цена</th>
                <th>Время покупки</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var purchace in Model){
                <tr>
                    <td>@purchace.Session.Film.Title</td>
                    <td>@purchace.Person.AccessRight</td>
                    <td>@purchace.Session.Price</td>
                    <td>@purchace.PurchaseTime</td>
                </tr>
            }
        </tbody>
    </table>
</div>
